print("Please enter a integer for next prompt")
user=int(input("Please enter 1st number"))
user1=int(input("Please enter 2nd number"))
user2=int(input("Please enter 3rd number"))
user3=int(input("Please enter 4th number"))
user4=int(input("Please enter 5th number"))
usermultiplcation = user*user1*user2*user3*user4
useraverage = (user+user1+user2+user3+user4)/5
usersum=user+user1+user2+user3+user4
print("The multiplication is", usermultiplcation)
print("the sum is", usersum)
print("the average is", useraverage)


